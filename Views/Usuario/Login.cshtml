@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card card shadow-lg p-4 rounded">
        <div class="text-center mb-4">
            <img src="~/images/logo.webp" alt="Logo" class="img-fluid" style="max-width: 150px;" /> <!-- Cambia la ruta según corresponda -->
        </div>
        <div class="card-body">
            <h3 class="text-center mb-4">Iniciar Sesión</h3>

            <form asp-action="Login" method="post">
                <div class="form-group mb-3 position-relative">
                    <label asp-for="correo" class="form-label">Correo Electrónico</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="correo" class="form-control" placeholder="correo@ejemplo.com" />
                    </div>
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 position-relative">
                    <label asp-for="clave" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="clave" type="password" class="form-control" placeholder="********" />
                    </div>
                    <span asp-validation-for="clave" class="text-danger"></span>
                </div>

                @if (ViewBag.mensajeError != null)
                {
                    <div class="alert alert-danger text-center mt-3">
                        @ViewBag.mensajeError
                    </div>
                }

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .login-container {
        background-color: #007bff; /* Fondo azul */
        min-height: 100vh; /* Asegúrate de que cubra toda la altura de la ventana */
    }

    .login-card {
        max-width: 400px;
        background-color: rgba(255, 255, 255, 0.8); /* Fondo blanco transparente para el card */
        border-radius: 8px;
    }

    .input-group-text {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px 0 0 5px;
    }

    .form-control {
        border-radius: 0 5px 5px 0;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Asegurando que no se active el scroll */
    body {
        overflow: hidden; /* Evita el scroll en la página principal */
    }
</style>
